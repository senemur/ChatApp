@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mt-5">
    <h1 class="display-4">💬 ChatApp'e Hoş Geldiniz</h1>
    <p class="lead mt-4">Gerçek zamanlı mesajlaşma deneyimini keşfedin</p>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">⚡ Gerçek Zamanlı</h5>
                    <p class="card-text">SignalR ile anlık mesajlaşma</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">👥 Grup Sohbetleri</h5>
                    <p class="card-text">Arkadaşlarınla grup oluştur</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">🔒 Güvenli</h5>
                    <p class="card-text">ASP.NET Identity ile korumalı</p>
                </div>
            </div>
        </div>
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="mt-5">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-3">Hemen Başla</a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg">Giriş Yap</a>
        </div>
    }
    else
    {
        <div class="mt-5">
            <a asp-controller="Chat" asp-action="Index" class="btn btn-primary btn-lg">Sohbetlere Git</a>
        </div>
    }
</div>
